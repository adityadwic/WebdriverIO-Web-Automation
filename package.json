{
  "name": "webdriverio-web-automation",
  "version": "2.0.0",
  "description": "Professional web automation framework using WebdriverIO with Page Object Model, Allure reporting, and CI/CD",
  "type": "module",
  "author": "Aditya Dwi Cahyono <adityadwic@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/adityadwic/WebdriverIO-Web-Automation.git"
  },
  "keywords": [
    "webdriverio",
    "automation",
    "testing",
    "selenium",
    "page-object-model",
    "allure",
    "javascript",
    "e2e"
  ],
  "devDependencies": {
    "@wdio/allure-reporter": "^8.32.2",
    "@wdio/cli": "^8.32.3",
    "@wdio/json-reporter": "^8.32.2",
    "@wdio/junit-reporter": "^8.32.2",
    "@wdio/local-runner": "^8.32.3",
    "@wdio/mocha-framework": "^8.32.3",
    "@wdio/spec-reporter": "^8.32.2"
  },
  "scripts": {
    "test": "wdio run ./wdio.conf.js",
    "test:registration": "wdio run ./wdio.conf.js --spec=./test/specs/user-registration.test.js",
    "test:headless": "wdio run ./wdio.conf.js --headless",
    "allure:generate": "allure generate allure-results --clean -o allure-report",
    "allure:open": "allure open allure-report",
    "allure:serve": "allure serve allure-results",
    "report:clean": "rm -rf allure-results allure-report test-results screenshots",
    "report:generate": "npm run allure:generate && echo 'ðŸ“Š Reports generated successfully!'",
    "test:report": "npm test && npm run report:generate && npm run allure:open"
  },
  "dependencies": {
    "allure-commandline": "^2.27.0"
  }
}
